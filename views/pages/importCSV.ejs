
<%- include('../partials/header'); -%>
<%- include('../partials/navigation'); -%>

<div class="container p-2">
    <div class="row">
        <div class="col-md-7 mx-auto container1">
			<div class="card text-center">
				<div class="card-header bg-secondary">
					<h3>Import Records From CSV File</h3>
				</div>			
				<div class="form-group">
					<div class="link">
						Download the CSV format
						<a href="download">HERE</a>
						before importing the records
					</div>
				</div>
						
				<div class="card-body">
					<form action="" method="POST" enctype="multipart/form-data" >								
						<div class = "row">						
							<div class="col-12 mb-2">			
								<label for="ccsvFile" class="float-left">Select CSV File </label>
								<input type="file" class="input"  
										name="csvFile" id="csvFile">
							</div>
						</div>
	
						<% 
							if(typeof msg != 'undefined' && msg != "")
							{ 
							%>
								<div class="col-12">
									<div class="success-msg">
										<%= msg %>
									</div>									
								</div>
							<% 
							}
									
							if(typeof error !== 'undefined' && error != "")
							{ 
							%>
								<div class="col-12">
									<div class="err-msg">
										<%= error %>
									</div>									
								</div>
							<% 
							} 
							%>
							
						<div class="col-3 form-btns">
							<input type="submit" value="Upload">
						</div>							
					</form>
					
				</div>	<!-- end of card-body class -->
			</div>	<!-- end of column class -->
		</div>	<!-- end of row class -->
	</div>	<!-- end of card class -->
</div> 	<!-- end of container class -->

<%- include('../partials/footer'); -%>
